{
    "name": "fadlee/mini-s3",
    "description": "Lightweight S3-compatible object storage server",
    "type": "project",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        },
        "files": [
            "app/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "fadlee"
        }
    ],
    "require": {
        "php": "^8.0",
        "leafs/leaf": "^4.4",
        "leafs/router": "^0.4.0",
        "leafs/http": "^4.2",
        "leafs/exception": "^3.7",
        "vlucas/phpdotenv": "^5.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.4",
        "phpstan/phpstan": "^2.1"
    },
    "scripts": {
        "test": "phpunit",
        "test:unit": "phpunit tests/Unit",
        "test:integration": "phpunit tests/Integration",
        "analyse": "phpstan analyse app tests --level=5"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
